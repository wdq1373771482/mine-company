	background: -o-linear-gradient(top,#ffab4f 5%, #ff9e42 25%, #ffab4f 100%);
	background: -ms-linear-gradient(top, #ffab4f 5%, #ff9e42 25%, #ffab4f 100%);
	background: -moz-linear-gradient(top,#ffab4f 5%, #ff9e42 25%, #ffab4f 100%);
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffab4f', endColorstr='#ffab4f', GradientType=0);
