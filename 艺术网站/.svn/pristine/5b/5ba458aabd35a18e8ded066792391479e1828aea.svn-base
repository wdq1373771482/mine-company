.page-wrap{padding: 0!important;}
.teach_art{font-size: 26px; color: #5e5e5e; font-family: 微软雅黑; font-weight: 400; margin: 45px 0; margin-left: -30px;}
.teach_name{font-family: 微软雅黑; font-weight: 400!important; font-style: normal; font-size: 24px!important; color: #6b6b6b!important; display: inline-block!important; padding-top: 70px!important;}
figure{float: left;}
.teach_jieshao{margin-right: 10px;}
.blog-posts .post{background-color: #F8F8F8!important;}
/*.blog-posts .post article{width: 345px!important; padding: 0 20px!important;}*/
.blog-posts .post article p{color: #6b6b6b!important; font-size: 14px!important; margin-bottom: 44px; line-height: 20px; font-family: 微软雅黑;}
.blog-posts .post article .inp{float: right;}
.blog-posts .post article .inp a{width: 90px; height: 32px; border: 2px solid #b6b6b6; display: inline-block; margin-right: 20px; font-size: 13px; color: #000; text-align: center; line-height: 28px;}
i{margin-right: 10px;}
@media(min-width:800px){
  .blog-posts .post article{
    width: 345px!important;
    padding: 0 20px!important;
  }
}
@media(max-width:1000px){
  .teach_art{font-size: 26px; color: #5e5e5e; font-family: 微软雅黑; font-weight: 400; margin: 45px 0;}
}
@media(max-width:400px){
    .blog-posts .post article .inp a{
        margin-right: 10px;
    }
}
@media only screen and (max-width: 1200px) and (min-width:990px){
    .blog-posts .post article{
        width: 255px!important;
        padding: 0 20px!important;
     }
     .blog-posts .post article p{
        margin-bottom: 31px!important;
     }
}
@media only screen and (max-width: 570px) and (min-width:480px){
    .blog-posts .post article p{
        margin-bottom: 31px!important;
     }
     .blog-posts .post article .inp a{
        margin-right: 16px!important;
     }
}