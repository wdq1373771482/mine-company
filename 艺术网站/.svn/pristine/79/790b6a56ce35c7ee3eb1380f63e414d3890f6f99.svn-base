.xh_down li a img{margin:0 auto;display:block;}
.xh_down li a p{line-height:30px;text-align:center;}
.xh_downs p{margin:20px 0;}
.xh_aList a,.xh_downs p{color:#F2F2F2;font-size:14px;color:#F2F2F2;}
.xh_aList a{margin:0 10px;}
.xh_aList a:first-child,.saoma li:first-child{margin-left:0;}
.saoma li i,.xh_down2 li i{font-size:36px;display:block;text-align:center;margin-right:0!important;}
.copy-right img{max-width:100%;height:auto;}
.xh_down_di{margin-top:40px;padding-left:123px;} 
@media(min-width:768px){
	.posts1 .post article{padding:40px 15px 0px 15px}
}
