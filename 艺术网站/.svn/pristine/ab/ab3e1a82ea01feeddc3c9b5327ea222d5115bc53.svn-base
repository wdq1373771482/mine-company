
/* 首页底部 */
.xh_down li{padding:10px 20px;background:#fff;}
.xh_down li a,.xh_down li a:hover,.xh_down li a:visited{color:#000;display:block;text-decoration:none;}
.xh_down li a img{margin:0 auto;display:block;}
.xh_down li a p{line-height:30px;text-align:center;}
.xh_downs p{margin:20px 0;}
.xh_aList a,.xh_downs p{color:#F2F2F2;font-size:14px;color:#F2F2F2;}
.xh_aList a{margin:0 10px;}
.xh_aList a:first-child,.saoma li:first-child{margin-left:0;}
.saoma li i,.xh_down2 li i{font-size:36px;display:block;text-align:center;margin-right:0!important;}


@media(min-width:768px){
	.posts1 .post article{padding:40px 15px 0px 15px}
}
@media(max-width:768px){
	.xh_form input,.post3 .filter .selectBox{width:64%!important;}
	.post3 .filter .selectBox-dropdown .selectBox-arrow{top:14px;right:-2px;}
	.xh_form p{margin:20px 0;}
	.post3 .filter .selectBox.location{margin-bottom:0!important;}
	.xh_topSpan{width:85%;}
	.xh_sc i.fa-upload{width:15%;}
}
@media only screen and (max-width: 991px) and (min-width: 769px){
	.xh_form label{width:98px!important;}
	.post3 .filter .selectBox.location{margin-bottom:0!important;}
}
@media only screen and (min-width: 992px) and (max-width: 1200px)
{
	.px_right article {width: 182px!important;}
}
@media only screen and (max-width: 1000px) and (min-width:768px){
	.post1 article{width:255px!important;}
	.px_right article {width: 182px!important;}
	.xh_form label{width:75px;}
	.post3 .filter .selectBox,.xh_form input{width:164px;}
	.xh_topSpan{width:90%;}
	.xh_sc i.fa-upload{width:10%;}
}
@media only screen and (max-width: 991px) and (min-width: 768px){
	.ds_list{margin-top:30px;padding-left:0;padding-right:0;}
	.post.xh_lists,.home-postss .post{display:block;}
}
@media(max-width:1000px){
	.properties-list .item .item-data{width:100%;margin-top:20px;}
	.px_list{text-align:left;}
	.px_right div{width:100%;}
	.px_right article{width:auto!important;}
	.xh_zpj figure,.xh_zpj figure > img{width:100%!important;}
	.xh_zpj figure > img{height:auto;}
	.navbar-toggle{display:block;}
	header .collapse{display:none;}
}
@media(max-width:640px){
	.flex-direction-nav .flex-next,.flex-direction-nav .flex-prev{
		height:30px!important;
		background-size:50% auto!important;
	}
	.xh_form label {
		width: 100%;
		text-align: center;
		margin: 10px 0;
	}
	.xh_form input,.post3 .filter .selectBox{width:97%!important;}
	.xh_topSpan em{padding-left:10px;}
}
@media only screen and (min-width:530px) and (max-width:560px){
	.xh_lists li{margin:8px;}
	.xh_topSpan em{font-size:18px;}
}
@media(max-width:530px){
	.xh_lists li{float:none;}
	.xh_lists li{width:auto!important;}
	.xh_sc{width:88%;}
}
@media(max-width:480px){
	.xh_form input,.post3 .filter .selectBox{width:93%!important;}
	.xh_js{display:none;}
	.post3 article{float:none!important;text-align:center;}
}
@media(max-width:390px){
	footer ul li:last-child {margin-right:auto!important;}
	.xh_down li,.xh_down2 li{padding: 10px 20px;background: #fff;max-width: 100%;min-width:215px;margin-left: auto;margin-right: auto;}
	.xh_down2 li{width:100%!important;}
	li.Li_2{margin:10px 0!important;}
	footer ul li {display:block;margin: 21px 10px;}
	footer ul li:last-child{width:auto;}
	i.xh_lxyx{font-size:16px!important;padding:0 10px!important;}
	.xh_pg input{width:62%;}
	.xh_topSpan{width:78%}
	.xh_topSpan em{font-size:18px;}
	.xh_sc i.fa-upload{width:22%;}
}
@media(min-width:390px){
	.saoma li:last-child{width:88px;padding:10px;}
}
@media(max-width:320px){
	.flex-direction-nav a{
		top:62%!important;
	}
	.xh_pg input{width:40%;}
	.xh_pg input{padding-left:4px;}
}