body,html,p,ul,li,dl,dt,dd{
   padding: 0;
   margin: 0;
}
a{
    text-decoration: none;
}
a:hover{
    text-decoration: underline;
}
img{
  border: 0;
}
body,html,.box{
   width: 100%;
   height: 100%;
}
.header{
    background:#30bcfa;
    height: 60px;
    text-align: center;
}
.header img{
  height: 40px;
  margin:0.6em auto;
}
.sou{
 margin-top: 1em;
 padding-left: 1em;
}
.sou input{
 line-height: 2em;
 border:1px solid #a7e4fb;
}
.sou button{
    line-height: 2em;
    border: 0;
    background:#30bcfa;
    color: #fff;
}
.txtList,.txtList dl{
    margin:0.8em auto;
    padding: 0 0.5em;
}
.txtList dd{
        margin-top: 0.5em;
        font-size:0.8em;
}