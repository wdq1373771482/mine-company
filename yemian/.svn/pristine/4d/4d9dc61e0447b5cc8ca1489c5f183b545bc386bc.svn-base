		$(function(){
			tab($(".list_tz li"), $(".lt_cont"), "on");
			$(".lt_conts h2 i").on("click",function(){
				$(this).parents("li").remove();
			});
			$(".bianji").on("click",function(){
				$(".lt_cont").each(function(){
					if($(this).is(":visible")){
						$(this).find("li").remove();
					}
				});
			});
		});
		function tab(target, cont, classN){
			target.on("click",function(){
				var ind=$(this).index();
				$(this).addClass(classN).siblings().removeClass();
				cont.eq(ind).show().siblings().hide();
			});
		}
