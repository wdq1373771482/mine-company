			<script>
			/*
			 * 注册检测
			 */
			
			$(".log_submit").click(function(){
				var tel = $("#phone_num").val();
				var pas=$("#password").val().length;
				var name=$("#name").val();
				var cord=$("#reg_cord").val()
                var telReg = !!tel.match(/^(0|86|17951)?(13[0-9]|15[012356789]|17[678]|18[0-9]|14[57])[0-9]{8}$/);
						//如果手机号码不能通过验证
						if(telReg == false){
						   alert("请输入正确的手机号");
						   return false;
						}
						if(name=="")
						{
							alert("请输入姓名")
							return false
						}
						if(pas<6)
						{
							alert("请输入正确的密码");
							return false
						}
						if(cord=="")
					  {
					  	alert("请输入获取到的验证码")
					  	return false
					  }
						
			    })
</script>
<script src="js/share.js" type="text/javascript"></script> 
